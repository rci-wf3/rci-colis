{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="d-flex justify-content-center align-items-center" id="login">
        <div class="card_bis w-25">
                <h5 class="card-header blue-gradient white-text text-center py-4"><strong>Connexion</strong></h5>
                    <div class="card-body px-lg-5 pt-0">
                        <form class="text-center" action="{{ path("fos_user_security_check") }}" method="post">
                            <div class="md-form">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                            </div>
                        
                            <div class="md-form">
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                            </div>
                        
                            <div class="md-form">
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                            </div>
                        
                            <div class="d-flex justify-content-around">
                                <div>
                                    <div class="form-check">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" type="submit">Se connecter</button>
                            <p>Vous n'avez de compte?</p>
                            <a href="{{ path('fos_user_registration_register') }}" class="text-primary">Inscrivez-vous!</a>
                        </form>
                    </div>
            </div>
</div>