{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="text-danger font-weight-bold mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="col-xl-6 col-md-9 col-11 col-sm-10 d-flex align-items-center justify-content-center pb-5" id="login">
        <div class="card_bis w-75 z-depth-4 ">
                <h3 class="card-header blue-gradient white-text text-center py-4"><strong>Connexion</strong></h3>
                    <div class="card-body px-lg-5 pt-0">
                        <form class="text-center" action="{{ path("fos_user_security_check") }}" method="post">
                            <div class="md-form">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                            </div>
                        
                            <div class="md-form md-bg">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                            </div>
                        
                            <div class="md-form md-bg">
                                <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                            </div>
                        
                            <div class="d-flex justify-content-around">
                                <div>
                                    <div class="form-check">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn-lg btn btn-outline-info btn-rounded waves-effect z-depth-2 my-4 p-2"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" type="submit">Se connecter</button>
                                <p>Vous n'avez pas de compte?</p>
                                <a href="{{ path('fos_user_registration_register') }}" class="text-primary">Inscrivez-vous!</a>
                            </div>
                        </form>
                    </div>
            </div>
</div>