<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% include "includes/stylesheets.html.twig" %}
        {% endblock %}
        <link rel="stylesheet" href="{{ absolute_url(asset('css/style.css')) }}">
    </head>
    <body>
            <div class="loader-container">
                <div class="loader"><img src="{{ absolute_url(asset('images/giphy.gif')) }}" alt="loader colis"></div>
            </div>
            
            {% block navbar %}
                {% include "navbar/nav_black.html.twig" %}
            {% endblock navbar %}
        <div id="histo">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                
            {% endif %}
        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div class="d-flex justify-content-center">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        <!-- Footer -->
      <footer class="page-footer text-center font-small mt-4 wow bg-dark">

            <hr class="my-4">
    
            <!-- Social icons -->
            <div class="row w-100 d-flex- justify-content-center">
              <div class="col-md-2 d-flex flex-column">
                <h5 class="text-left">À propos de relais colis</h5>
                <ul class="p-0">
                  <li class="text-left list-unstyled"><a href="">Qui sommes-nous?</a></li>
                  <li class="text-left list-unstyled"><a href="">Nos abonnements</a></li>
                </ul>
              </div>
              <div class="col-md-2 d-flex flex-column">
                <h5 class="text-left">Informations légales</h5>
                <ul class="p-0">
                  <li class="text-left list-unstyled"><a href="{{path('front_cguv')}}">CGUV</a></li>
                  <li class="text-left list-unstyled"><a href="{{path('front_mentions')}}">Mentions Légales</a></li>
                  <li class="text-left list-unstyled"><a href="">Politique de confidentialité</a></li>
                  <li class="text-left list-unstyled"><a href="">Utilisation des cookies</a></li>
                  <li class="text-left list-unstyled"><a href="">Crédits</a></li>
                </ul>
              </div>
              <div class="col-md-2 d-flex flex-column">
                <h5 class="text-left">Besoin d'aide ?</h5>
                <ul class="p-0">
                  <li class="text-left list-unstyled"><a href="{{path('front_contact')}}">Nous contacter</a></li>
                  <li class="text-left list-unstyled"><a href="#">Consultez notre FAQ</a></li>
                </ul>
              </div>
            </div>
    
            <!--Copyright-->
            <div class="footer-copyright py-3">
              © 2019 Copyright:
              <a href="https://mdbootstrap.com/education/bootstrap/" target="_blank"> MDBootstrap.com </a>
            </div>
            <!--/.Copyright-->
    
          </footer>
          <!-- Footer -->
    
            {% block javascripts %}
                {% include "includes/javascripts.html.twig" %}
            {% endblock %}
    
        </body>
    </body>
</html>
