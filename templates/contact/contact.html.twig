{% extends 'base_front.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

    {% block navbar %}
        {% include "navbar/nav_black.html.twig" %}
    {% endblock navbar %}

    {% block body %}

        <div class="col-xl-12 col-md-12 col-12 col-sm-12 d-flex align-items-center justify-content-center pb-5 w-100">
            <div class="card_bis w-75 z-depth-4">
                <h3 class="card-header blue-gradient white-text text-center py-4"><strong>Contact</strong></h3>
                <div class="card-body px-lg-5 pt-0">
                    {{ form_start(form) }}

                    <div class="col-lg-6 col-12"> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.nom,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.nom, null, { 'label': 'Votre nom', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.prenom,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.prenom, null, { 'label': 'Votre prénom', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.adresse,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.adresse, null, { 'label': 'Votre adresse', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.code_postal,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.code_postal, null, { 'label': 'Votre code postal', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.ville,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.ville, null, { 'label': 'Votre ville', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.pays,{'attr': { 'class': 'form-control' }} ) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.email,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.email, null, { 'label': 'Votre email', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.telephone,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.telephone, null, { 'label': 'Votre numéro de téléphone', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.message,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.message, null, { 'label': 'Tapez votre message ici', 'label_attr': {'class': ''} }) }}
                        </div> 

                        <div class="md-form md-bg">
                            {{ form_widget(form.conditions,{'attr': { 'class': 'form-control' }} ) }}
                            {{ form_label(form.conditions, null, { 'label': 'En cochant cette case et en soumettant ce formulaire, j\'accepte que mes données personnelles soient utilisées par RCI Colis pour me recontacter. Aucun autre traitement ne sera effectué avec mes informations', 'label_attr': {'class': ''} }) }}
                        </div> 

                          <div>
                        <button type="submit" class="btn btn-success">Envoyer</button>
                    </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div> 
        </div>

    {% endblock body %}