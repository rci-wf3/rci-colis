{% extends 'base_front.html.twig' %}

{% block title %}Passer une commande{% endblock %} 

{% block navbar %}
    {% include "navbar/nav_black.html.twig" %} 
{% endblock navbar %} 

{% block body %}
    <div id="histo" class="col-xl-12 col-md-12 col-12 col-sm-12 d-flex align-items-center justify-content-center pb-5 w-100">
        <div class="card-body px-lg-5 pt-0">
            
            <form action="" class="row">
                <h1 class="w-100 card-header blue-gradient white-text text-center py-4">Vos coordonnées</h1>
                <div class="w-100 row rounded-bottom border justifu-content-center m-0">
                    <div class="col-lg-6 col-12">
                        <div class="md-form md-bg">
                            <input type="text" name="" id="" class="form-control">
                            <label for="">Votre nom</label>
                        </div>
            
                        <div class="md-form md-bg">
                            <input type="text" name="" id="" class="form-control">
                            <label for="">Votre prénom</label>
                        </div>
                    </div>

                    <div class="col-lg-6 col-12">
                        <div class="md-form md-bg">
                            <input type="text" name="" id="" class="form-control">
                            <label for="">Votre adresse</label>
                        </div>
                
                        <div class="md-form md-bg">
                            <input type="text" name="" id="" class="form-control">
                            <label for="">Votre adresse mail</label>
                        </div>
                    </div>
                            
                </div>
                <div class="w-100 row mt-5">
                    <div class="col-lg-6">
                        <h1 class="card-header blue-gradient white-text text-center py-4">Choix de l'abonnement</h1>
                        <div class="d-flex justify-content-center p-5 border rounded-bottom">
                            <select name="" id="" class="browser-default custom-select">
                                <option value="">Formule sur devis</option>
                                <option value="">Formule à l'unité</option>
                            </select>
                        </div>
                    </div>
        
                    <div class="col-lg-6">
                        <h1 class="card-header blue-gradient white-text text-center py-4">Choix du relais</h1>
                        <div class="d-flex justify-content-center p-5 border rounded-bottom">
                            <select name="" id="" class="browser-default custom-select">
                                {% for RCI in commande %}
                                    <option value="">{{RCI.enseigne}}: {{RCI.adresse}} {{RCI.ville}}, {{RCI.codepostal}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock body %}